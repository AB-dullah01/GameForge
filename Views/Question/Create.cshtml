@model GameForge.Models.Question

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>Question</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="QuestionID" class="control-label"></label>
                <input asp-for="QuestionID" class="form-control" />
                <span asp-validation-for="QuestionID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AuthorID" class="control-label"></label>
                <select asp-for="AuthorID" class ="form-control" asp-items="ViewBag.AuthorID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreationDate" class="control-label"></label>
                <input asp-for="CreationDate" class="form-control" />
                <span asp-validation-for="CreationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuestionText" class="control-label"></label>
                <input asp-for="QuestionText" class="form-control" />
                <span asp-validation-for="QuestionText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Upvotes" class="control-label"></label>
                <input asp-for="Upvotes" class="form-control" />
                <span asp-validation-for="Upvotes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Downvotes" class="control-label"></label>
                <input asp-for="Downvotes" class="form-control" />
                <span asp-validation-for="Downvotes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LatestAnswerID" class="control-label"></label>
                <input asp-for="LatestAnswerID" class="form-control" />
                <span asp-validation-for="LatestAnswerID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LatestAnswerTime" class="control-label"></label>
                <input asp-for="LatestAnswerTime" class="form-control" />
                <span asp-validation-for="LatestAnswerTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfAnswers" class="control-label"></label>
                <input asp-for="NumberOfAnswers" class="form-control" />
                <span asp-validation-for="NumberOfAnswers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
